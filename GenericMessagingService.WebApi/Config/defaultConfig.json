{
  "$schema": "../ConfigSchema/app-schema.json",
  
  // will try for razor templates, then default to database templates
  "email": {
    "overrideToAddress": "",
    "defaultFromAddress": "",
    "folder": {
      "folderPath": ""
    }
  },
  "sms": {
    "twilio": {
      "accountSid": "",
      "authToken": ""
    }
  },
  "template": {
    "templateStrategy": "razor|database",
    "databaseTemplates": {
      "connectionString": "",
      "table": "",
      "lookupColumn": "",
      "templateColumn": "",
      "subjectColumn": ""
    },
    // Will find User-defaultemail in the User\\Default folder, named Email
    // any other User-<any> in User, named <any>
    "razorTemplates": {
      "fixed": {
        "ForgotPassword": "Auth\\ForgotPassword",
        "User-defaultemail": "User\\Default\\Email"
      },
      "regex": {
        "User-([a-zA-Z0-9]+)": "User\\{0}"
      }
    }
  }
}